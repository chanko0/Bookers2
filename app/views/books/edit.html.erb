<div class="container">
 <div class="row">
  <div class="col-md-8">
   <% if @book.errors.any? %>
        <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
         <%= message %>
        <% end %>
   <% end %>
   <h1>Editing Book</h1>
   <%= form_with model:@book,local: true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div>
     <%= f.submit 'Update Book' %>
    </div>
   <% end %>
   <%= link_to "Show", book_path(@book.id) %>
   |
   <%= link_to "Back", books_path %>
  </div>
 </div>
</div>
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
   </table>

    <p class="btn btn-outline-secondary btn-block">
     <%= link_to edit_user_path(@user), method: :get do %>
     　<i <i class="fas fa-user-cog"></i>
     <% end %>
    </p>

   <h1>New book</h1>
   <%= form_with model:@newbook, url: books_path,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opimion</h4>
    <%= f.text_area :body %>

    <div>
     <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
   <% end %>
  </div>


  <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
    <table class="table">
     <tbody>
      <tr></tr>
      <tr>
       <th>
        <%= link_to user_path(@user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <p>
        <%= @user.name %>
        </p>
        <% end %>
       </th>
       <th><%= @book.title %></th>
       <th><%= @book.body %></th>
       <% if @user.id == current_user.id %>
       <th><%= link_to "Edit", edit_book_path(@book) %></th>
       <th><%= link_to "Destroy", book_path,method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
       <% end %>
      </tr>
     </tbody>
    </table>
  </div>
 </div>
</div>

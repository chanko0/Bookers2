<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
    </table>
    
    <p class="btn btn-outline-secondary btn-block">
     <%= link_to edit_user_path(@user), method: :get do %>
     　<i <i class="fas fa-user-cog"></i>
     <% end %>
    </p>
  
   <h1>New book</h1>
   <%= form_with model:@book, url: books_path,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Opimion</h4>
    <%= f.text_area :body %>
     
   <div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
   </div>
   <% end %>
  </div>
  
  <div class="col-md-8 offset-md-1">
   <h1>Users</h1>
   　<table class="table">
    　<thead>
    　　 <tr></tr>
     　<tr>
      　<th>image</th>
      　<th>name</th>
     　</tr>
    　</thead>
    
    　<tbody>
    　<% @users.each do |user| %>
      <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td> 
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
 

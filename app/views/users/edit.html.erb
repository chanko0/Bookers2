<div class="container">
 <div class="row">
  <div class="col-md-8">
    <% if @user.errors.any? %>
         <%= @user.errors.count %>error
         <% @user.errors.full_messages.each do |message| %>
          <%= message %>
         <% end %>
    <% end %>
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">Name</label>
      <div>
        <%= f.text_field :name, autofocus: true, id:"inputName"%>
      </div>
      <label for="Image">Image</label>
      <div>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <label for="inputIntroduction">Introduction</label>
      <div>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>
      </div>
    
      <div>
        <%= f.submit "Update User" %>
      </div>
    <% end %>
  </div>
 </div>
</div>